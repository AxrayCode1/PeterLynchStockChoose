<Window x:Class="StockAllInfomation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockAllInfomation"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="button" Content="Add" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Click="button_Click"/>
            <Button x:Name="button_run" Content="Run" HorizontalAlignment="Left" Margin="10,0" VerticalAlignment="Top" Width="75" Click="Button_run_Click"/>
            <TextBox x:Name="txtbox_custom" Width="200px" Height="30px" VerticalAlignment="Top"/>
            <Button x:Name="button_run_custom" Content="Run Select" HorizontalAlignment="Left" Margin="10,0" VerticalAlignment="Top" Width="75" Click="Button_run_custom_Click"/>
        </StackPanel>
    </Grid>
</Window>
